# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
# CHANGE: Add internal JWT secret for service-to-service communication
INTERNAL_JWT_SECRET=your-internal-service-secret-here

# Database
MONGODB_URI=mongodb://localhost:27017/ecommerce

# Gateway Configuration
GATEWAY_URL=http://localhost:4000
# CHANGE: Add allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Service URLs (internal)
AUTH_SERVICE_URL=http://127.0.0.1:4001/graphql
PRODUCT_SERVICE_URL=http://127.0.0.1:4002/graphql
ORDER_SERVICE_URL=http://127.0.0.1:4003/graphql

# API URLs for REST communication
AUTH_API_URL=http://127.0.0.1:4001/api/users
PRODUCT_API_URL=http://127.0.0.1:4002/api/products
ORDER_API_URL=http://127.0.0.1:4003/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_LOG_LEVEL=error